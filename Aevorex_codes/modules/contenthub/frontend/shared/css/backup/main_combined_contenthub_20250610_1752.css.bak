.test-navigation {
    display: flex;
    gap: var(--ch-space-2);
    padding: var(--ch-space-3);
    background: var(--ch-bg-secondary);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-md);
    margin: var(--ch-space-4) 0;
}

.test-navigation.mobile-nav {
    flex-direction: column;
    max-width: 300px;
}

.test-navigation .nav-item {
    padding: var(--ch-space-2) var(--ch-space-3);
    background: var(--ch-bg-primary);
    border: 1px solid var(--ch-border-secondary);
    border-radius: var(--ch-radius-sm);
    color: var(--ch-text-primary);
    font-family: var(--ch-font-family-sans);
    font-weight: var(--ch-font-weight-medium);
    font-size: var(--ch-text-sm);
    cursor: pointer;
    transition: var(--ch-transition-colors);
}

.test-navigation .nav-item:hover {
    background: var(--ch-bg-tertiary);
    border-color: var(--ch-border-focus);
    color: var(--ch-brand-primary);
}



.module-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--ch-space-4);
    padding: var(--ch-space-4);
    margin: var(--ch-space-4) 0;
}

.module-card {
    background: var(--ch-bg-card);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-lg);
    padding: var(--ch-space-4);
    box-shadow: var(--ch-shadow-sm);
    transition: var(--ch-transition-all);
    font-family: var(--ch-font-family-sans);
    color: var(--ch-text-primary);
}

.module-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--ch-shadow-md);
    border-color: var(--ch-brand-primary);
}



.test-form {
    background: var(--ch-surface-primary);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-md);
    padding: var(--ch-space-4);
    margin: var(--ch-space-4) 0;
    display: flex;
    flex-direction: column;
    gap: var(--ch-space-3);
}

.test-form input[type="text"],
.test-form input[type="email"],
.test-form textarea {
    padding: var(--ch-space-2) var(--ch-space-3);
    border: 1px solid var(--ch-border-secondary);
    border-radius: var(--ch-radius-sm);
    background: var(--ch-bg-primary);
    color: var(--ch-text-primary);
    font-family: var(--ch-font-family-sans);
    font-size: var(--ch-text-sm);
    transition: var(--ch-transition-colors);
}

.test-form input:focus,
.test-form textarea:focus {
    outline: none;
    border-color: var(--ch-brand-primary);
    box-shadow: 0 0 0 3px var(--ch-brand-secondary);
}

.test-button {
    padding: var(--ch-space-2) var(--ch-space-4);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-sm);
    background: var(--ch-surface-primary);
    color: var(--ch-text-primary);
    font-family: var(--ch-font-family-sans);
    font-weight: var(--ch-font-weight-medium);
    font-size: var(--ch-text-sm);
    cursor: pointer;
    transition: var(--ch-transition-all);
}

.test-button:hover {
    background: var(--ch-brand-primary);
    color: var(--ch-white);
    border-color: var(--ch-brand-primary);
    transform: translateY(-1px);
}



.counter {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 60px;
    padding: var(--ch-space-2) var(--ch-space-3);
    background: var(--ch-brand-secondary);
    color: var(--ch-brand-primary);
    border: 2px solid var(--ch-brand-primary);
    border-radius: var(--ch-radius-full);
    font-family: var(--ch-font-family-mono);
    font-weight: var(--ch-font-weight-bold);
    font-size: var(--ch-text-sm);
    margin: var(--ch-space-1);
    transition: var(--ch-transition-all);
}

.counter:hover {
    background: var(--ch-brand-primary);
    color: var(--ch-white);
    transform: scale(1.05);
}



.debug-console {
    background: var(--ch-surface-secondary);
    border: 2px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-lg);
    padding: var(--ch-space-4);
    margin: var(--ch-space-4) 0;
    font-family: var(--ch-font-family-mono);
    max-height: 300px;
    overflow-y: auto;
}

.debug-console h3 {
    margin: 0 0 var(--ch-space-3) 0;
    color: var(--ch-brand-primary);
    font-family: var(--ch-font-family-sans);
    font-weight: var(--ch-font-weight-bold);
    font-size: var(--ch-text-lg);
    border-bottom: 1px solid var(--ch-border-secondary);
    padding-bottom: var(--ch-space-2);
}

#debug-output {
    background: var(--ch-bg-primary);
    border: 1px solid var(--ch-border-secondary);
    border-radius: var(--ch-radius-sm);
    padding: var(--ch-space-3);
    min-height: 120px;
    color: var(--ch-text-primary);
    font-size: var(--ch-text-xs);
    line-height: 1.4;
    white-space: pre-wrap;
    overflow-wrap: break-word;
}



.btn {
    
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--ch-space-2-5) var(--ch-space-4);
    background: var(--ch-bg-secondary);
    color: var(--ch-text-primary);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-sm);
    font-family: var(--ch-font-family-sans);
    font-weight: var(--ch-font-weight-medium);
    font-size: var(--ch-text-sm);
    cursor: pointer;
    transition: var(--ch-transition-all);
    text-decoration: none;
    user-select: none;
}

.btn:hover {
    background: var(--ch-bg-tertiary);
    border-color: var(--ch-border-secondary);
    transform: translateY(-1px);
    box-shadow: var(--ch-shadow-sm);
}

.btn:active {
    transform: translateY(0);
    box-shadow: var(--ch-shadow-xs);
}

.btn:focus {
    outline: 2px solid var(--ch-brand-primary);
    outline-offset: 2px;
}



.test-section {
    background: var(--ch-bg-primary);
    border: 2px dashed var(--ch-border-secondary);
    border-radius: var(--ch-radius-lg);
    padding: var(--ch-space-6);
    margin: var(--ch-space-8) 0;
}

.test-section h2 {
    margin: 0 0 var(--ch-space-4) 0;
    color: var(--ch-brand-primary);
    font-family: var(--ch-font-family-sans);
    font-weight: var(--ch-font-weight-bold);
    font-size: var(--ch-text-xl);
}

.test-section p {
    margin: 0 0 var(--ch-space-4) 0;
    color: var(--ch-text-secondary);
    font-family: var(--ch-font-family-sans);
    font-size: var(--ch-text-base);
    line-height: 1.6;
}



[data-theme="dark"] .test-navigation {
    background: var(--ch-surface-secondary);
    border-color: var(--ch-border-primary);
}

[data-theme="dark"] .test-navigation .nav-item {
    background: var(--ch-surface-primary);
    color: var(--ch-text-primary);
}

[data-theme="dark"] .debug-console {
    background: var(--ch-surface-primary);
    border-color: var(--ch-border-primary);
}

[data-theme="dark"] .test-section {
    background: var(--ch-surface-primary);
    border-color: var(--ch-border-secondary);
}



@media (max-width: 768px) {
    .module-cards {
        grid-template-columns: 1fr;
        gap: var(--ch-space-3);
        padding: var(--ch-space-3);
    }
    
    .test-navigation {
        flex-direction: column;
    }
    
    .test-section {
        padding: var(--ch-space-4);
        margin: var(--ch-space-4) 0;
    }
}



