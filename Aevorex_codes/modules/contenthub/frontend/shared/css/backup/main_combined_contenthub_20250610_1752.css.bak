}

[data-theme="dark"] .ch-btn--primary:hover {
    background: var(--ch-brand-secondary);
    border-color: var(--ch-brand-secondary);
    box-shadow: 0 3px 6px var(--ch-shadow-primary);
}

[data-theme="dark"] .ch-btn--ghost {
    background: transparent;
    color: var(--ch-text-secondary);
