/* ==========================================================================
   CARD VARIABLES
   ========================================================================== */

:root {
    /* Card Spacing */
    --ch-card-padding-sm: var(--ch-space-3);
    --ch-card-padding-md: var(--ch-space-4);
    --ch-card-padding-lg: var(--ch-space-6);
    
    /* Card Colors */
    --ch-card-bg: var(--ch-bg-card);
    --ch-card-border: var(--ch-border-primary);
    --ch-card-shadow: var(--ch-shadow-sm);
    
    /* Card Headers */
    --ch-card-header-bg: var(--ch-bg-secondary);
    --ch-card-header-border: var(--ch-border-primary);
}

/* ==========================================================================
   BASE CARD - Foundation component
   ========================================================================== */

.ch-card {
    display: flex;
    flex-direction: column;
    background-color: var(--ch-card-bg);
    border: 1px solid var(--ch-card-border);
    border-radius: var(--ch-radius-lg);
    box-shadow: var(--ch-card-shadow);
    transition: var(--ch-transition-shadow);
    overflow: hidden;
    position: relative;
}

/* Card Size Variants */
.ch-card--sm {
    border-radius: var(--ch-radius-md);
}

.ch-card--lg {
    border-radius: var(--ch-radius-xl);
}

/* Card Elevation Variants */
.ch-card--flat {
    box-shadow: none;
    border: 1px solid var(--ch-border-primary);
}

.ch-card--elevated {
    box-shadow: var(--ch-shadow-md);
}

.ch-card--floating {
    box-shadow: var(--ch-shadow-lg);
}

/* Interactive Card */
.ch-card--interactive {
    cursor: pointer;
    transition: var(--ch-transition-shadow), var(--ch-transition-transform);
    
    &:hover {
        box-shadow: var(--ch-shadow-md);
        transform: translateY(-1px);
    }
    
    &:active {
        transform: translateY(0);
        box-shadow: var(--ch-shadow-sm);
    }
}

/* ==========================================================================
   CARD HEADER - Top section with title and actions
   ========================================================================== */

.ch-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--ch-card-padding-md);
    background-color: var(--ch-card-header-bg);
    border-bottom: 1px solid var(--ch-card-header-border);
    min-height: 3.5rem;
}

.ch-card-header--sm {
    padding: var(--ch-card-padding-sm);
    min-height: 2.5rem;
}

.ch-card-header--lg {
    padding: var(--ch-card-padding-lg);
    min-height: 4rem;
}

.ch-card-header--borderless {
    border-bottom: none;
    background-color: transparent;
}

/* Card Title */
.ch-card-title {
    font-size: 1rem;
    font-weight: var(--ch-font-weight-semibold);
    color: var(--ch-text-primary);
    margin: 0;
    line-height: 1.4;
    flex: 1;
}

.ch-card-title--sm {
    font-size: 0.875rem;
}

.ch-card-title--lg {
    font-size: 1.125rem;
}

/* Card Subtitle */
.ch-card-subtitle {
    font-size: 0.75rem;
    font-weight: var(--ch-font-weight-normal);
    color: var(--ch-text-secondary);
    margin: var(--ch-space-1) 0 0 0;
    line-height: 1.4;
}

/* Card Actions */
.ch-card-actions {
    display: flex;
    align-items: center;
    gap: var(--ch-space-2);
    margin-left: var(--ch-space-3);
}

/* ==========================================================================
   CARD BODY - Main content area
   ========================================================================== */

.ch-card-body {
    flex: 1;
    padding: var(--ch-card-padding-md);
    color: var(--ch-text-primary);
    line-height: 1.6;
}

.ch-card-body--sm {
    padding: var(--ch-card-padding-sm);
}

.ch-card-body--lg {
    padding: var(--ch-card-padding-lg);
}

.ch-card-body--borderless {
    padding-top: 0;
}

/* Card Text */
.ch-card-text {
    font-size: 0.875rem;
    color: var(--ch-text-secondary);
    margin: 0 0 var(--ch-space-3) 0;
    line-height: 1.6;
}

.ch-card-text:last-child {
    margin-bottom: 0;
}

/* ==========================================================================
   CARD FOOTER - Bottom section with actions or meta info
   ========================================================================== */

.ch-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--ch-card-padding-md);
    background-color: var(--ch-bg-secondary);
    border-top: 1px solid var(--ch-border-primary);
    margin-top: auto;
}

.ch-card-footer--sm {
    padding: var(--ch-card-padding-sm);
}

.ch-card-footer--lg {
    padding: var(--ch-card-padding-lg);
}

.ch-card-footer--borderless {
    border-top: none;
    background-color: transparent;
}

.ch-card-footer--center {
    justify-content: center;
}

.ch-card-footer--end {
    justify-content: flex-end;
}

/* ==========================================================================
   CARD VARIANTS - Specialized card types
   ========================================================================== */

/* Product Card */
.ch-card--product {
    .ch-card-header {
        padding-bottom: 0;
        border-bottom: none;
        background-color: transparent;
    }
    
    .ch-card-body {
        padding-top: var(--ch-space-2);
    }
}

/* Profile Card */
.ch-card--profile {
    text-align: center;
    
    .ch-card-body {
        padding-top: var(--ch-space-6);
    }
}

/* Stats Card */
.ch-card--stats {
    .ch-card-body {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: var(--ch-space-6) var(--ch-card-padding-md);
    }
}

/* Feature Card */
.ch-card--feature {
    border: 2px solid var(--ch-border-primary);
    
    &:hover {
        border-color: var(--ch-brand-primary);
    }
}

/* ==========================================================================
   CARD MEDIA - Images and visual content
   ========================================================================== */

.ch-card-media {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
}

.ch-card-media--aspect-video {
    aspect-ratio: 16 / 9;
}

.ch-card-media--aspect-square {
    aspect-ratio: 1 / 1;
}

.ch-card-media--rounded {
    border-radius: var(--ch-radius-lg) var(--ch-radius-lg) 0 0;
}

/* ==========================================================================
   CARD AVATAR - Profile images and icons
   ========================================================================== */

.ch-card-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--ch-border-primary);
    margin: 0 auto var(--ch-space-3) auto;
}

.ch-card-avatar--sm {
    width: 2rem;
    height: 2rem;
}

.ch-card-avatar--lg {
    width: 4rem;
    height: 4rem;
}

.ch-card-avatar--square {
    border-radius: var(--ch-radius-md);
}

/* ==========================================================================
   CARD BADGE - Status indicators
   ========================================================================== */

.ch-card-badge {
    position: absolute;
    top: var(--ch-space-3);
    right: var(--ch-space-3);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    height: 1.5rem;
    padding: 0 var(--ch-space-2);
    font-size: 0.75rem;
    font-weight: var(--ch-font-weight-medium);
    color: var(--ch-white);
    background-color: var(--ch-brand-primary);
    border-radius: var(--ch-radius-full);
    z-index: 1;
}

.ch-card-badge--success {
    background-color: var(--ch-success-500);
}

.ch-card-badge--warning {
    background-color: var(--ch-warning-500);
}

.ch-card-badge--error {
    background-color: var(--ch-error-500);
}

/* ==========================================================================
   CARD LOADING STATE
   ========================================================================== */

.ch-card--loading {
    pointer-events: none;
    position: relative;
    
    &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.2),
            transparent
        );
        transform: translateX(-100%);
        animation: shimmer 1.5s infinite;
    }
}

@keyframes shimmer {
    100% {
        transform: translateX(100%);
    }
}

/* ==========================================================================
   CARD GRID LAYOUT
   ========================================================================== */

.ch-card-grid {
    display: grid;
    gap: var(--ch-space-6);
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
}

.ch-card-grid--2-col {
    grid-template-columns: repeat(2, 1fr);
}

.ch-card-grid--3-col {
    grid-template-columns: repeat(3, 1fr);
}

.ch-card-grid--4-col {
    grid-template-columns: repeat(4, 1fr);
}

/* ==========================================================================
   RESPONSIVE DESIGN
   ========================================================================== */

@media (max-width: 1024px) {
    .ch-card-grid--4-col {
        grid-template-columns: repeat(3, 1fr);
    }
}

@media (max-width: 768px) {
    .ch-card-grid--3-col,
    .ch-card-grid--4-col {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .ch-card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--ch-space-2);
    }
    
    .ch-card-actions {
        margin-left: 0;
        width: 100%;
        justify-content: flex-end;
    }
}

@media (max-width: 480px) {
    .ch-card-grid,
    .ch-card-grid--2-col,
    .ch-card-grid--3-col,
    .ch-card-grid--4-col {
        grid-template-columns: 1fr;
    }
    
    .ch-card {
        margin: 0 var(--ch-space-2);
    }
    
    .ch-card-footer {
        flex-direction: column;
        gap: var(--ch-space-2);
        align-items: stretch;
    }
}

/* ==========================================================================
   ACCESSIBILITY ENHANCEMENTS
   ========================================================================== */

/* Focus styles for interactive cards */
.ch-card--interactive:focus {
    outline: 2px solid var(--ch-brand-primary);
    outline-offset: 2px;
