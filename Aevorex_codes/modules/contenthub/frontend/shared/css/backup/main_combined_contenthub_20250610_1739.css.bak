/* ==========================================================================
   DASHBOARD VARIABLES
   ========================================================================== */

:root {
    /* Dashboard Dimensions */
    --ch-dashboard-gap: var(--ch-space-6);
    --ch-dashboard-gap-sm: var(--ch-space-4);
    --ch-dashboard-padding: var(--ch-space-8);
    --ch-dashboard-padding-sm: var(--ch-space-4);
    
    /* Widget Dimensions */
    --ch-widget-min-height: 200px;
    --ch-widget-max-height: 400px;
    --ch-widget-border-radius: var(--ch-radius-lg);
}

/* ==========================================================================
   DASHBOARD CONTAINER
   ========================================================================== */

.ch-dashboard {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--ch-dashboard-gap);
    padding: var(--ch-dashboard-padding);
    min-height: 100vh;
    background-color: var(--ch-bg-secondary);
}

.ch-dashboard--with-sidebar {
    grid-template-columns: auto 1fr;
    grid-template-areas: "sidebar main";
}

/* ==========================================================================
   DASHBOARD HEADER
   ========================================================================== */

.ch-dashboard-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--ch-space-6) 0;
    border-bottom: 1px solid var(--ch-border-primary);
    margin-bottom: var(--ch-dashboard-gap);
}

.ch-dashboard-title {
    font-size: 1.875rem;
    font-weight: var(--ch-font-weight-bold);
    color: var(--ch-text-primary);
    margin: 0;
}

.ch-dashboard-subtitle {
    font-size: 0.875rem;
    color: var(--ch-text-secondary);
    margin: var(--ch-space-1) 0 0 0;
}

.ch-dashboard-actions {
    display: flex;
    align-items: center;
    gap: var(--ch-space-3);
}

/* ==========================================================================
   DASHBOARD GRID SYSTEM
   ========================================================================== */

.ch-dashboard-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--ch-dashboard-gap);
    width: 100%;
}

/* Grid Span Classes */
.ch-grid-span-1 { grid-column: span 1; }
.ch-grid-span-2 { grid-column: span 2; }
.ch-grid-span-3 { grid-column: span 3; }
.ch-grid-span-4 { grid-column: span 4; }
.ch-grid-span-5 { grid-column: span 5; }
.ch-grid-span-6 { grid-column: span 6; }
.ch-grid-span-7 { grid-column: span 7; }
.ch-grid-span-8 { grid-column: span 8; }
.ch-grid-span-9 { grid-column: span 9; }
.ch-grid-span-10 { grid-column: span 10; }
.ch-grid-span-11 { grid-column: span 11; }
.ch-grid-span-12 { grid-column: span 12; }

/* Row Span Classes */
.ch-grid-row-span-1 { grid-row: span 1; }
.ch-grid-row-span-2 { grid-row: span 2; }
.ch-grid-row-span-3 { grid-row: span 3; }

/* ==========================================================================
   DASHBOARD WIDGETS
   ========================================================================== */

.ch-widget {
    background-color: var(--ch-bg-card);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-widget-border-radius);
    box-shadow: var(--ch-shadow-sm);
    overflow: hidden;
    transition: var(--ch-transition-shadow);
    min-height: var(--ch-widget-min-height);
    display: flex;
    flex-direction: column;
}

.ch-widget:hover {
    box-shadow: var(--ch-shadow-md);
}

.ch-widget--interactive {
    cursor: pointer;
}

.ch-widget--highlighted {
    border-color: var(--ch-brand-primary);
    box-shadow: 0 0 0 1px var(--ch-brand-primary), var(--ch-shadow-md);
}

/* Widget Header */
.ch-widget-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--ch-space-4);
    border-bottom: 1px solid var(--ch-border-primary);
    background-color: var(--ch-bg-secondary);
}

.ch-widget-title {
    font-size: 1rem;
    font-weight: var(--ch-font-weight-semibold);
    color: var(--ch-text-primary);
    margin: 0;
}

.ch-widget-subtitle {
    font-size: 0.75rem;
    color: var(--ch-text-tertiary);
    margin: var(--ch-space-1) 0 0 0;
}

.ch-widget-actions {
    display: flex;
    align-items: center;
    gap: var(--ch-space-2);
}

/* Widget Body */
.ch-widget-body {
    flex: 1;
    padding: var(--ch-space-4);
    overflow: auto;
}

.ch-widget-body--no-padding {
    padding: 0;
}

.ch-widget-body--scrollable {
    max-height: var(--ch-widget-max-height);
    overflow-y: auto;
}

/* Widget Footer */
.ch-widget-footer {
    padding: var(--ch-space-3) var(--ch-space-4);
    background-color: var(--ch-bg-tertiary);
    border-top: 1px solid var(--ch-border-primary);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* ==========================================================================
   DASHBOARD STATS
   ========================================================================== */

.ch-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--ch-space-4);
    margin-bottom: var(--ch-dashboard-gap);
}

.ch-stat-card {
    @extend .ch-widget;
    min-height: auto;
    text-align: center;
}

.ch-stat-value {
    font-size: 2rem;
    font-weight: var(--ch-font-weight-bold);
    color: var(--ch-text-primary);
    margin: 0;
    line-height: 1.2;
}

.ch-stat-label {
    font-size: 0.875rem;
    color: var(--ch-text-secondary);
    margin: var(--ch-space-1) 0 0 0;
}

.ch-stat-change {
    font-size: 0.75rem;
    font-weight: var(--ch-font-weight-medium);
    margin: var(--ch-space-2) 0 0 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--ch-space-1);
}

.ch-stat-change--positive {
    color: var(--ch-success-600);
}

.ch-stat-change--negative {
    color: var(--ch-error-600);
}

.ch-stat-change--neutral {
    color: var(--ch-text-tertiary);
}

/* ==========================================================================
   DASHBOARD SECTIONS
   ========================================================================== */

.ch-dashboard-section {
    margin-bottom: var(--ch-dashboard-gap);
}

.ch-dashboard-section-title {
    font-size: 1.25rem;
    font-weight: var(--ch-font-weight-semibold);
    color: var(--ch-text-primary);
    margin: 0 0 var(--ch-space-4) 0;
    display: flex;
    align-items: center;
    gap: var(--ch-space-2);
}

.ch-dashboard-section-subtitle {
    font-size: 0.875rem;
    color: var(--ch-text-secondary);
    margin: var(--ch-space-1) 0 var(--ch-space-4) 0;
}

/* ==========================================================================
   DASHBOARD TOOLBAR
   ========================================================================== */

.ch-dashboard-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--ch-space-3) var(--ch-space-4);
    background-color: var(--ch-bg-tertiary);
    border: 1px solid var(--ch-border-primary);
    border-radius: var(--ch-radius-md);
    margin-bottom: var(--ch-dashboard-gap);
}

.ch-dashboard-filters {
    display: flex;
    align-items: center;
    gap: var(--ch-space-3);
}

.ch-dashboard-search {
    display: flex;
    align-items: center;
    gap: var(--ch-space-2);
}

/* ==========================================================================
   RESPONSIVE DESIGN
   ========================================================================== */

@media (max-width: 1200px) {
    .ch-dashboard-grid {
        grid-template-columns: repeat(8, 1fr);
    }
    
    .ch-grid-span-9,
    .ch-grid-span-10,
    .ch-grid-span-11,
    .ch-grid-span-12 {
        grid-column: span 8;
    }
}

@media (max-width: 768px) {
    .ch-dashboard {
        padding: var(--ch-dashboard-padding-sm);
        gap: var(--ch-dashboard-gap-sm);
    }
    
    .ch-dashboard--with-sidebar {
        grid-template-columns: 1fr;
        grid-template-areas: "main";
    }
    
    .ch-dashboard-grid {
        grid-template-columns: 1fr;
        gap: var(--ch-dashboard-gap-sm);
    }
    
    .ch-grid-span-1,
    .ch-grid-span-2,
    .ch-grid-span-3,
    .ch-grid-span-4,
    .ch-grid-span-5,
    .ch-grid-span-6,
    .ch-grid-span-7,
    .ch-grid-span-8,
    .ch-grid-span-9,
    .ch-grid-span-10,
    .ch-grid-span-11,
    .ch-grid-span-12 {
        grid-column: span 1;
    }
    
    .ch-dashboard-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--ch-space-3);
    }
    
    .ch-dashboard-actions {
        width: 100%;
        justify-content: flex-end;
    }
    
    .ch-dashboard-toolbar {
        flex-direction: column;
        gap: var(--ch-space-3);
        align-items: stretch;
    }
    
    .ch-stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .ch-widget-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--ch-space-2);
    }
    
    .ch-widget-actions {
        width: 100%;
        justify-content: flex-end;
    }
}

@media (max-width: 480px) {
    .ch-stats-grid {
        grid-template-columns: 1fr;
    }
    
    .ch-dashboard-filters,
    .ch-dashboard-search {
        flex-direction: column;
        align-items: stretch;
    }
}

